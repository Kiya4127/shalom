#include <stdio.h>
#include <stdlib.h>

int main()
{
    printf("\nA char  is %d bytes", sizeof (char));
    printf("\nAn int is %d bytes", sizeof ( int));
    printf("\nAn long is %d bytes", sizeof (long));
    printf("\nAn unsigned char is %d bytes", sizeof (unsigned char));
    printf ("\nAn singned char is %d bytes", sizeof (signed char));
    return 0;
}
/*Statements, Expression and Operatos */

#include <stdio.h>
#include <stdlib.h>
/* Demonstrates unary operator prefix and postfix modes*/
int a, b;

int main()
{

a = b = 5;
   printf("\n%d  %d", a--, --b);
   printf("\n%d  %d", a--, --b);
   printf("\n%d  %d", a--, --b);
   return 0;
}
